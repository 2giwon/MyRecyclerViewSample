<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egiwon.myrecyclerviewsample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyRecyclerViewSampleApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyRecyclerViewSample"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.autohorizontalscroll.AutoHorizontalScrollActivity"
            android:theme="@style/Theme.MyRecyclerViewSample" />

        <activity
            android:name=".ui.circlehorizontalscroll.CircleHorizontalScrollActivity"
            android:theme="@style/Theme.MyRecyclerViewSample" />

        <activity
            android:name=".ui.customscrollbar.CustomScrollBarActivity"
            android:theme="@style/Theme.MyRecyclerViewSample" />

        <activity
            android:name=".ui.diffutil.DiffUtilActivity"
            android:theme="@style/Theme.MyRecyclerViewSample" />
    </application>

</manifest>
